{
    "name": "IISc Moodle Downloader",
    "version": "1.2",
    "manifest_version": 3,
    "description": "Download videos from moodle platform for later use. A download button will appear automatically above the video player on the page.",
    "action": {
        "default_popup": "app/index.html"
    },
    "content_scripts": [
        {
            "js": ["app/auto_apply.js"],
            "matches": ["https://courses.iisc.ac.in/*", "https://course.iisc.ac.in/*"]
        }       
    ],
    "permissions": [
        "activeTab"
    ],
    "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}